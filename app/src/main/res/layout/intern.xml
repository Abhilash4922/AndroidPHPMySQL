<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:id="@+id/linearLayoutIntern"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInternTitle"
            android:text="Job Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInternLink"
            android:text="Job Link"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInternDescription"
            android:text="Job Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/textViewInternId"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:text="Intern ID"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textViewUserId"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="Job User ID"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonInternApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply" />
    </LinearLayout>


</android.support.v7.widget.CardView>